    <meta name="msapplication-wide310x150logo" content="/mstile-310x150.png" />
    <meta name="theme-color" content="#002f6c">

    <title>@ViewBag.Title</title>
    @*CSS Styles*@
    @Styles.Render("~/Content/themes/base/jqueryuicss")
    @Styles.Render("~/style/Datatables/")
    @Styles.Render("~/Content/css")


    @*JS scripts*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/handlebars")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Suomenkieli", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                    <li>@Html.ActionLink("Drills", "Index", "Drills")</li>
                    @if (Request.IsAuthenticated  && User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Lists", "Index", "Lists")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Suomenkieli Search</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jqueryui")
    <script type="text/javascript">
        $.widget.bridge('uitooltip', $.ui.tooltip);
    </script>
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)

